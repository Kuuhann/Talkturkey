<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InputPpActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_50sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp"
            app:cardCornerRadius="@dimen/_150sdp"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp">

            <ImageView
                android:id="@+id/iv_setPp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pp"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_OpenGallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        app:strokeColor="@color/white"
        app:cornerRadius="@dimen/_8sdp"
        android:text="Open Gallery"
        android:textSize="@dimen/_11ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_72sdp"
        android:layout_marginEnd="@dimen/_72sdp"
        app:layout_constraintTop_toBottomOf="@+id/cardview"
        app:layout_constraintStart_toStartOf="@id/cardview"
        app:layout_constraintEnd_toEndOf="@id/cardview"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_PpNext"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_42sdp"
        app:strokeColor="@color/white"
        app:cornerRadius="@dimen/_8sdp"
        android:text="Next"
        android:textSize="@dimen/_11ssp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_70sdp"
        app:layout_constraintTop_toBottomOf="@+id/btn_OpenGallery"
        app:layout_constraintStart_toStartOf="@id/btn_OpenGallery"
        app:layout_constraintEnd_toEndOf="@id/btn_OpenGallery"/>

    <ProgressBar
        android:id="@+id/pbOfPp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_70sdp"
        app:layout_constraintTop_toBottomOf="@+id/btn_OpenGallery"
        app:layout_constraintStart_toStartOf="@id/btn_OpenGallery"
        app:layout_constraintEnd_toEndOf="@id/btn_OpenGallery"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:src="@drawable/logo_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>