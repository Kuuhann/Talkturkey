<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".activities.SignUpActivity">

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toBottomOf="@id/iv_arrow"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_fName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="First Name"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/iv"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_fName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/et_background"
        android:elevation="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_fName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_lName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Last Name"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintTop_toBottomOf="@+id/et_fName"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_lName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/et_background"
        android:padding="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_lName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_PhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="Phone number"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/et_lName"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_PhoneNum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/et_background"
        android:elevation="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_PhoneNum"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_Pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintTop_toBottomOf="@+id/et_PhoneNum"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_Pw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/et_background"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_Pw"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_confirmPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Confirm password"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintTop_toBottomOf="@+id/et_Pw"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_confirmPw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/et_background"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_confirmPw"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:text="CONTINUE"
        android:background="@drawable/btn_background"
        android:elevation="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/et_confirmPw"
        app:layout_constraintTop_toBottomOf="@id/et_confirmPw"
        app:layout_constraintEnd_toEndOf="@id/et_confirmPw"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:src="@drawable/logo_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>